<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Project3PQStyled</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- Link to Bootstrap library-->
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- Link to custom whole site css -->
  <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" /> <!-- Link to the font-awesome library -->
</head>
<body class="container">
  <header class="my-4 p-4 bg-success text-white text-center rounded">
    <h1 class="display-4" style="font-family:'Arial Rounded MT'"><i class="fa-solid fa-money-bill"></i> Price Quotation</h1>
  </header>
  <div>
    @RenderBody()
  </div>

  <footer class="border-top footer text-muted">
    <div class="container">
      &copy; 2024 - Peter Sanford <i class="fa-solid fa-fire"></i>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
