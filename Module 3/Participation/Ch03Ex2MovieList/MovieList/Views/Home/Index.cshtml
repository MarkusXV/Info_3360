@model List<Movie>
@{
    ViewData["Title"] = "My Movies";
}
<div class="mb-2">
    <a asp-controller="Movie" asp-action="Add">Add New Movie</a> <!-- Add new movie button at the top -->
</div>

<table class="table table-bordered table-striped table-hover"> <!-- Table with borders and striped -->
    <thead>
        <tr><th>Name</th><th>Year</th><th>Genre</th><th>Rating</th><th></th></tr> <!-- Populates the first row of table-->
    </thead>
    <tbody>
        @foreach (var movie in Model) { <!-- Populates the table with each movie in the database -->
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.Rating</td>
                <td> <!-- Last row has Edit and Delete buttons-->
                    <a class="btn btn-primary" asp-controller="Movie" asp-action="Edit"
                       asp-route-id="@movie.MovieId"
                       asp-route-slug="@movie.Slug">Edit</a>
                    <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete"
                       asp-route-id="@movie.MovieId"
                       asp-route-slug="@movie.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>