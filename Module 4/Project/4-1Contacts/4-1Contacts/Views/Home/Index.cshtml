@model List<Contacts>
@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  ViewData["Title"] = "Peter's Contacts";
}

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Category</th>
      <th>Organization</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var contacts in Model)
    {
      <tr>
        <td>@contacts.FirstName</td>
        <td>@contacts.LastName</td>
        <td>@contacts.Phone</td>
        <td>@contacts.Email</td>
        <td>@contacts.Categories.CategoriesName</td>
        <td>@contacts.Email</td>
        <td>
          <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contacts.ContactId" asp-route-slug="@contacts.Slug">Edit</a>
          <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contacts.ContactId" asp-route-slug="@contacts.Slug">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>